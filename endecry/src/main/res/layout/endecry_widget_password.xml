<?xml version="1.0" encoding="utf-8"?>
<com.de.rocket.ue.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 背景 -->
    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#6D000000" />

    <!-- 提示框 -->
    <com.de.rocket.ue.layout.PercentLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/bg_coner_8_ffffff_fill">

        <EditText
            android:focusable="true"
            android:id="@+id/et_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:background="@null"
            android:hint="请输入八位密码"
            android:textColor="#000000"
            android:layout_margin="15dp"
            app:layout_textSizePercent="2.5%sh"
            tools:layout_textSizePercent="3%h" />

        <View
            android:id="@+id/v_split"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_content"
            android:background="#cccccc" />

        <com.de.rocket.ue.layout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_split"
            android:orientation="horizontal">

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:focusable="true"
                android:id="@+id/tv_click_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:background="@drawable/widget_bt_selecter"
                android:text="取消"
                android:textColor="#398eff"
                android:textStyle="bold"
                app:layout_textSizePercent="2.5%sh"
                tools:layout_textSizePercent="2.5%h" />

            <View
                android:id="@+id/v_bottom_split"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#cccccc" />

            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:focusable="true"
                android:id="@+id/tv_click_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:background="@drawable/widget_bt_selecter"
                android:text="确定"
                android:textColor="#398eff"
                android:textStyle="bold"
                app:layout_textSizePercent="2.5%sh"
                tools:layout_textSizePercent="2.5%h" />
        </com.de.rocket.ue.layout.PercentLinearLayout>


    </com.de.rocket.ue.layout.PercentLinearLayout>

</com.de.rocket.ue.layout.PercentRelativeLayout>
